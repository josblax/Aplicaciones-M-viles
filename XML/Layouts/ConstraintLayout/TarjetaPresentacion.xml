<ImageView
    android:id="@+id/iconoperson"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/baseline_person_80"
     android:layout_marginStart="30dp"
     android:layout_marginTop="30dp"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent" />

   <TextView
      android:id="@+id/nombre"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:text="Alumno 1"
      android:textSize="30sp"
       android:layout_marginTop="50dp"
       android:layout_marginStart="30dp"
      app:layout_constraintStart_toEndOf="@id/iconoperson"
      app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iconcuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_numbers_80"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/iconoperson"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567-0"
        android:textSize="30sp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/iconcuenta"
        app:layout_constraintTop_toBottomOf="@id/nombre"/>

    <ImageView
        android:id="@+id/iconcel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/baseline_phone_android_80"
        app:layout_constraintTop_toBottomOf="@id/iconcuenta"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/celular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="55-12345678"
        android:textSize="30sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toEndOf="@id/iconcel"
        app:layout_constraintTop_toBottomOf="@id/cuenta"/>

    <ImageView
        android:id="@+id/iconphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_local_phone_80"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/iconcel"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="55-12345678"
        android:textSize="30sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/celular"
        app:layout_constraintStart_toEndOf="@id/iconphone"
        />

    <ImageView
        android:id="@+id/iconmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_email_80"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/iconphone"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mimail@my.unitec.edu.mx"
        android:textSize="20sp"
        android:layout_marginTop="78dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/phone"
        app:layout_constraintStart_toEndOf="@id/iconmail"/>
